-- SEQUENCE: public.usuario_sequence

-- DROP SEQUENCE public.usuario_sequence;

CREATE SEQUENCE public.usuario_sequence
    INCREMENT 1
    START 1
    MINVALUE 1
    MAXVALUE 9223372036854775807
    CACHE 1;

ALTER SEQUENCE public.usuario_sequence
    OWNER TO postgres;
    
